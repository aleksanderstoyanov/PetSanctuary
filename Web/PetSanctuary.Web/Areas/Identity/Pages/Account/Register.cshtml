@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mb-5">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-4 border-bottom border-left border-right border-top shadow p-5 mb-5 bg-white rounded">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center mt-2"><i class="far fa-user" style="font-size:50px;"></i></h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
