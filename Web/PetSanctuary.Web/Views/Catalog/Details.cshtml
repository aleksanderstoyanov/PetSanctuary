@model CatalogServiceModel
<div class="container d-flex justify-content-center">


    <div class="card bg-dark" style="width:700px;color:white">
        <img class="card-img-top" src="~/img/@Model.Image" alt="Card image">
        <div class="card-body">
            <h4 class="card-title">@Model.Name</h4>
            <ul class="shadow">
                <li>
                    <time datetime="2020-05-25 12:00:00">
                        <i class="fas fa-calendar-alt mr-2"></i>@Model.CreatedOn
                    </time>
                </li>
                @if (Model.PhoneNumber != null)
                {
                    <li><i class="fas fa-phone-alt"></i> - @Model.PhoneNumber</li>
                }
                @if (Model.PhoneNumber == null)
                {
                    <li><i class="fas fa-phone-alt"></i> - No phone number</li>
                }

                <li>Age -@(Model.Age==0?"No age":Model.Age)</li>
                <li>Gender - @Model.Gender</li>
                <li>Type - @Model.Type</li>
                <li>Address <i class="fas fa-map-marker-alt mr-2"></i>- @Model.City @Model.Address</li>
                <li>Is vaccinated <i class="fas fa-syringe mr-2"></i>- @Model.IsVaccinated</li>


            </ul>
            <div class="row d-flex justify-content-center">
                <button type="button" class="btn btn-lg btn-outline-success" data-toggle="modal" data-target="#exampleModal">Save me <i class="fas fa-paw"></i></button>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body text-center">
                            <h2 style="color:black"> Are you sure that want to save @Model.Name ?</h2>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <form method="post">
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">No</button>
                                <button type="submit" formmethod="post" class="btn btn-outline-success">Yes</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
@section Scripts{
<script>
     $('.card').hide().slideDown(500);
</script>
}
