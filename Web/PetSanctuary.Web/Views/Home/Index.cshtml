@using PetSanctuary.Common
@model List<AllDogsHomeViewModel>
@{
    this.ViewData["Title"] = "Home Page";
    var firstModel = Model.Any() ? Model[0] : null;
    var secondModel = Model.Count > 1 ? Model[1] : null;
    var thirdModel = Model.Count > 2 ? Model[2] : null;
}
<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName <i class="fas fa-paw" style="color:red"></i></h1>
    <p style="font-weight:bold">Adopt a pet save a pet</p>
</div>
<div class="container d-flex justify-content-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width:800px;">
        <div class="carousel-inner">
            @if (firstModel != null)
            {
                <div class="carousel-item active">
                    <img src="@firstModel.Image" class="d-block w-100" alt="..." style="height:450px;">
                    <div class="carousel-caption d-none d-md-block">

                        <p class="h3 font-weight-bold">@firstModel.Name</p>
                        <h5><a href="/Catalog/Details/@firstModel.Id" class="btn btn-danger text-center">Details <i class="fas fa-info-circle"></i></a></h5>
                    </div>
                </div>
            }
            @if (secondModel != null)
            {
                <div class="carousel-item">
                    <img src="@secondModel.Image" class="d-block w-100" alt="..." style="height:450px;">
                    <div class="carousel-caption d-none d-md-block">

                        <p class="h3 font-weight-bold">@secondModel.Name</p>
                        <h5><a href="/Catalog/Details/@secondModel.Id" class="btn btn-danger text-center">Details <i class="fas fa-info-circle"></i></a></h5>
                    </div>
                </div>
            }
            @if (thirdModel != null)
            {
                <div class="carousel-item">
                    <img src="@thirdModel.Image" class="d-block w-100" alt="..." style="height:450px;">
                    <div class="carousel-caption d-none d-md-block">

                        <p class="h3 font-weight-bold">@thirdModel.Name</p>
                        <h5><a href="/Catalog/Details/@thirdModel.Id" class="btn btn-danger text-center">Details <i class="fas fa-info-circle"></i></a></h5>
                    </div>
                </div>
            }
          
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>
