@model ClinicServiceModel
<div class="col-md-4" style="padding-top: 20px;">
    <div class="card bg-dark" style="width: 20rem;">

        <img src="@Model.Image" class="card-img-top" alt="..." style="height:270px;width:318px;">
        <div class="card-body">
            <h5 class="card-title" style="color:white">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.City, @Model.Address <i class="fas fa-map-marker-alt"></i></h6>

            <a asp-area="" asp-controller="Vets" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-success mr-2"><i class="fas fa-user-md"></i> View vets</a>
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <a asp-area="Administration" asp-controller="Clinics" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2">Edit <i class="fas fa-pencil-alt"></i></a>
                <a asp-area="Administration" asp-controller="Clinics" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mr-2">Delete<i class="fas fa-trash-alt"></i></a>
            }
        </div>
    </div>
</div>